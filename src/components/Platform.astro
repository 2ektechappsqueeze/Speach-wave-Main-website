---
import { Image } from 'astro:assets';
import apple from '../../public/assets/icons/apple.svg';
import android from '../../public/assets/icons/android.svg'; 
import windows from '../../public/assets/icons/windows.svg';
---
 <section class="section" style="background-color: #fafafa;">
        <div class="container">
            <h2 class="section-title">Available Everywhere You Work</h2>
            <p class="section-subtitle">Access SpeechWave on all your devices with native apps for every platform</p>

            <!-- <div style="text-align: center; margin-bottom: 3rem;">
                <img src="assets/images/devices.png" alt="Multi-platform availability"
                    style="max-width: 400px; width: 100%; height: auto;">
            </div> -->

            <div class="download-grid">
                <div class="download-card">
                    <div class="platform-icon">
                        <Image src={apple} alt="iOS" width="48" height="48" />
                    </div>
                    <h4>iOS</h4>
                 <p style="color: var(--accent-text); margin-bottom: 1.5rem;">iPhone & iPad</p>
                    <p style="font-size: 1.125rem; font-weight: 600; color: var(--accent-text); margin-top: 1rem;">
                        Coming Soon</p>
                </div>

                <div class="download-card">
                    <div class="platform-icon">
                        <Image src={android} alt="Android" width="48" height="48" />
                    </div>
                    <h4>Android</h4>
                     <p style="color: var(--accent-text); margin-bottom: 1.5rem;">Phones & Tablets</p>
                    <a href="#" class="btn btn-primary" style="width: 100%;">Get it on Google Play</a>
                </div>

                <div class="download-card">
                    <div class="platform-icon">
                        <Image src={windows} alt="Windows" width="48" height="48" />
                    </div>
                    <h4>Windows</h4>
                     <p style="color: var(--accent-text); margin-bottom: 1.5rem;">Desktop Application</p>
                    <p style="font-size: 1.125rem; font-weight: 600; color: var(--accent-text); margin-top: 1rem;">
                        Coming Soon</p>
                </div>

                <div class="download-card">
                    <div class="platform-icon">
                        <Image src={apple} alt="macOS" width="48" height="48" />
                    </div>
                    <h4>macOS</h4>
                    <p style="color: var(--accent-text); margin-bottom: 1.5rem;">Desktop Application</p>
                    <p style="font-size: 1.125rem; font-weight: 600; color: var(--accent-text); margin-top: 1rem;">
                        Coming Soon</p>
                </div>
            </div>

        
        </div>
    </section>

  <style>
    .download-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: var(--spacing-lg);
  max-width: 900px;
  margin: var(--spacing-xl) auto;
}

.download-card {
  text-align: center;
  padding: var(--spacing-xl);
  border: 1px solid var(--border-color);
  border-radius: var(--border-radius);
  transition: var(--transition);
}

.download-card:hover {
  border-color: var(--primary-text);
  box-shadow: 0 10px 40px var(--card-shadow);
}

.platform-icon {
  font-size: var(--font-size-4xl);
  margin-bottom: var(--spacing-md);
}

</style>  